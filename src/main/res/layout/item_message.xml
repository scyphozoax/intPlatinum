<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="4dp">

    <!-- 发送的消息 -->
    <LinearLayout
        android:id="@+id/layoutSentMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:background="@drawable/message_bubble_sent"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- 消息内容 -->
            <TextView
                android:id="@+id/tvSentMessage"
                style="@style/ChatMessageTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary_dark" />

            <!-- 图片消息 -->
            <ImageView
                android:id="@+id/ivSentImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:adjustViewBounds="true"
                android:maxWidth="200dp"
                android:maxHeight="200dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <!-- 时间戳 -->
            <TextView
                android:id="@+id/tvSentTime"
                style="@style/ChatMessageTimeStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 接收的消息 -->
    <LinearLayout
        android:id="@+id/layoutReceivedMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:background="@drawable/message_bubble_received"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- 发送者名称 -->
            <TextView
                android:id="@+id/tvSenderName"
                style="@style/ChatMessageSenderStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp" />

            <!-- 消息内容 -->
            <TextView
                android:id="@+id/tvReceivedMessage"
                style="@style/ChatMessageTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary_dark" />

            <!-- 图片消息 -->
            <ImageView
                android:id="@+id/ivReceivedImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:adjustViewBounds="true"
                android:maxWidth="200dp"
                android:maxHeight="200dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <!-- 时间戳 -->
            <TextView
                android:id="@+id/tvReceivedTime"
                style="@style/ChatMessageTimeStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 系统消息 -->
    <LinearLayout
        android:id="@+id/layoutSystemMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvSystemMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/surface_variant_dark"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:textColor="@color/text_secondary_dark"
            android:textSize="12sp"
            android:layout_marginVertical="8dp" />

    </LinearLayout>

</LinearLayout>