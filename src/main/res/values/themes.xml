<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IntPlatinumMV" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_primary_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/text_primary_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="android:textColorHint">@color/text_hint_dark</item>
    </style>
    
    <style name="Theme.IntPlatinumMV.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- 登录界面样式 -->
    <style name="LoginInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:background">@drawable/input_background</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textColorHint">@color/text_hint_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>
    
    <style name="PrimaryButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:layout_marginVertical">16dp</item>
        <item name="android:background">@drawable/button_primary_background</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- 聊天消息样式 -->
    <style name="MessageTextStyle">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    
    <style name="MessageSenderStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    
    <style name="MessageTimeStyle">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
    
    <!-- 用户列表样式 -->
    <style name="UserListItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="UserNameStyle">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="UserStatusStyle">
        <item name="android:textColor">@color/online_status</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>